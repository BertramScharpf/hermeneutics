if ENV[ "HERMES"] == "keep" then
  keep
end

pop "myprovider.com" do
  login "j.doe+myprovider.com", "verysecret"
  login "john.doe+myprovider.com", "verysecret"
end

keep {

  pop "yetanother.com" do
    login "johndoe@yetanother.com", "verysecret"
  end

}

